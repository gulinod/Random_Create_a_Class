<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dan.randomcreate_a_class.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#9c9a9a">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randomize Loadout"
        android:id="@+id/randomButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:onClick="buttonOnClick" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/primaryImage"
        android:background="@drawable/weap_3"
        android:baselineAlignBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/primary_text"
        android:id="@+id/PrimaryText"
        android:layout_below="@+id/primaryImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="M-16"
        android:layout_below="@+id/primaryImage"
        android:id="@+id/PrimaryWeaponInfo"
        android:layout_toRightOf="@+id/PrimaryText"
        android:layout_toEndOf="@+id/PrimaryText"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Attatchment:"
        android:layout_below="@id/PrimaryText"
        android:id="@+id/attachmentText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Iron Sights"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/attachmentText"
        android:layout_below="@id/PrimaryText"
        android:id="@+id/attatchmentInfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Secondary:"
        android:id="@+id/SecondaryText"
        android:layout_below="@+id/attachmentText"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="M9"
        android:id="@+id/SecondaryWeaponInfo"
        android:layout_toRightOf="@+id/SecondaryText"
        android:layout_below="@+id/attachmentText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Grenade:"
        android:id="@+id/GrenadeText"
        android:layout_below="@+id/SecondaryText"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Explosive"
        android:id="@+id/GrenadeInfo"
        android:layout_below="@+id/SecondaryText"
        android:layout_toRightOf="@+id/GrenadeText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Perk1:"
        android:id="@+id/Perk1Text"
        android:layout_below="@+id/GrenadeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bomb Squad"
        android:id="@+id/Perk1Info"
        android:layout_below="@+id/GrenadeInfo"
        android:layout_toRightOf="@+id/Perk1Text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Perk2:"
        android:id="@+id/Perk2Text"
        android:layout_below="@+id/Perk1Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Stopping Power"
        android:id="@+id/Perk2Info"
        android:layout_below="@+id/Perk1Info"
        android:layout_toRightOf="@+id/Perk1Text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Perk3:"
        android:id="@+id/Perk3Text"
        android:layout_below="@+id/Perk2Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Steady Aim"
        android:id="@+id/Perk3Info"
        android:layout_below="@+id/Perk2Info"
        android:layout_toRightOf="@+id/Perk2Text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
